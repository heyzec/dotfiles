[main]
# Maps capslock to escape when pressed and control when held
capslock = overload(nav, esc)
# Restore capslock with holding both shifts
leftshift+rightshift = capslock


# Consider moving everything below to swhkd
[nav:C-A-M]
h = left
j = down
k = up
l = right


[nav+shift:C-S-A-M]
h = C-left
l = C-right
